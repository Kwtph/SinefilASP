@model Movie


<div class="row mb-5">
    <div class="col-md-12">


        <div class="card mb-3">
            <div class="card-body">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="/img/@Model.ImageUrl" alt="@Model.Description" class="card-img" />
                    </div>
                    <div class="col-md-4">
                        <iframe width="560" height="315" src="@Model.TrailerUrl" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h3 class="card-title">
                                <b>@Model.Name</b>
                            </h3>
                            <p class="card-text">@Model.Description</p>
                            <br />
                            <p class="card-text"><b style="font-size: 20px;">Yönetmen: </b>@Model.Yonetmen</p>
                            <br />
                            <p class="card-text"><b style="font-size: 20px;">Oyuncular: </b>@Model.Oyuncular</p>
                            <br />
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <br />
        <a href="/home/index">Ana menüye dön</a>
        <br />
        <br />
        <br />
    </div>

    


</div>
